{
    "name": "conference-app",
    "version": "0.0.1",
    "author": "Peter de Jong",
    "bugs": "https://github.com/Peter de Jong/conference-app/issues",
    "dependencies": {
        "compression": "^1.7.4",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-session": "^1.17.2",
        "helmet": "^4.6.0",
        "jsforce": "^1.10.1"
    },
    "devDependencies": {
        "eslint": "^7.32.0",
        "eslint-plugin-inclusive-language": "^2.1.1",
        "husky": "^7.0.2",
        "lwc-services": "^3.1.2",
        "prettier": "^2.3.2",
        "npm-run-all": "^4.1.5",
        "cross-env": "^7.0.3"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4",
        "cross-env": "^7.0.3",
        "npm-run-all": "^4.1.5"
    },
    "homepage": "https://github.com/Peter de Jong/conference-app",
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "nodemonConfig": {
        "watch": [
            "src/server/**/*.js"
        ],
        "ext": "js",
        "ignore": [
            "src/**/*.spec.js",
            "src/**/*.test.js"
        ],
        "exec": "node ./src/server/api.js"
    },
    "repository": "Peter de Jong/conference-app",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "postinstall": "husky install",
        "precommit": "npm run prettier:verify && [ $? -eq 0 ] && npm run lint",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "cross-env ON_HEROKU=true run-p serve:client serve:server",
        "serve:client": "lwc-services watch",
        "serve:server": "nodemon",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "cross-env ON_HEROKU=false run-p watch:client watch:server",
        "watch:client": "lwc-services watch",
        "watch:server": "nodemon"
    }
}
